<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="350dp"
            android:layout_height="match_parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center"
            android:background="@drawable/ic_baseline_settings_24"
            android:backgroundTint="@color/black"
            android:layout_marginHorizontal="10dp"/>
    </LinearLayout>

    <TextView
        android:layout_marginVertical="10dp"
        android:id="@+id/nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="산지니"
        android:paddingLeft="20dp"
        android:textSize="30sp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/login_register"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_login_24"
        android:text="  로그인 / 회원가입"
        android:textColor="@color/black"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:textSize="20sp"
        android:gravity="center|start"/>

    <Button
        android:id="@+id/waiting"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:drawableLeft="@drawable/ic_baseline_alarm_24"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:text="  대기현황"
        android:textSize="20sp"
        android:textAlignment="textStart"
        android:gravity="start|center"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/myreview"
        android:layout_marginBottom="5dp"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:text="  내가 쓴 리뷰"
        android:drawableLeft="@drawable/pen"
        android:textSize="20sp"
        android:textAlignment="textStart"
        android:gravity="start|center"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/myinformation"
        android:layout_marginBottom="5dp"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:drawableLeft="@drawable/information"
        android:text="  내 정보 관리"
        android:textSize="20sp"
        android:textAlignment="textStart"
        android:gravity="start|center"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/notice"
        android:layout_marginBottom="5dp"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:drawableLeft="@drawable/notice"
        android:text="  공지사항"
        android:textSize="20sp"
        android:textAlignment="textStart"
        android:gravity="start|center"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/customercenter"
        android:drawableLeft="@drawable/customer"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:text="  고객센터"
        android:textSize="20sp"
        android:textAlignment="textStart"
        android:gravity="start|center"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"/>

</LinearLayout>